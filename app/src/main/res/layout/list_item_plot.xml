<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/img_seat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_plot_book"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/plot_empty"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@drawable/plot_available"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plot_name_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plot_booked"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:background="@drawable/plot_unavailable"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plot_name_booked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_seat_selected"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_plot_booked"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</LinearLayout>