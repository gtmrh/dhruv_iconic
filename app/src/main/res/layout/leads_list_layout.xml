<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="Adapter.LeadsAdaptor">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/orderhistory_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lead_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Date"
                    android:drawableTint="@color/icon"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lead_for"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_home_work_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Icon City"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lead_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_contactless_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/icon"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Source"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lead_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="5dp"
                    android:maxLines="2"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Name"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lead_proffesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_work_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Profession"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

                <TextView
                    android:id="@+id/lead_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Not Defined"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lead_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawableStart="@drawable/ic_baseline_stay_primary_portrait_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Mobile  Number"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/whatsapp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center|start"
                        android:src="@drawable/whatsapp_icon" />

                <ImageView
                    android:id="@+id/call_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="center|start"
                    android:src="@drawable/ic_baseline_call_24" />

                <ImageView
                    android:id="@+id/msg_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center|start"
                    android:src="@drawable/ic_baseline_message_24" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alt_no_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lead_alt_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawableStart="@drawable/ic_baseline_add_ic_call_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Mobile  Number"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/whatsapp_alt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center|start"
                    android:src="@drawable/whatsapp_icon" />

                <ImageView
                    android:id="@+id/call_on_alt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="center|start"
                    android:src="@drawable/ic_baseline_call_24" />

                <ImageView
                    android:id="@+id/msg_on_alt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center|start"
                    android:src="@drawable/ic_baseline_message_24" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/conversation_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_phonelink_ring_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Mode"
                    android:textColor="#444545"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ccode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_device_unknown_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="C-Code"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_textsms_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Purpose"
                    android:textColor="#444545"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_device_unknown_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Conversation"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/conversation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_forum_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Conversation"
                    android:textColor="#444545"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_device_unknown_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Conversation"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/gilroy_extra_bold_light"
                    android:gravity="center|start"
                    android:text="Status"
                    android:textColor="#444545"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_followup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#DD2C00"
                android:drawablePadding="5dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Add Followup"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>