<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReportActivity">

    <LinearLayout
        android:id="@+id/report_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ttl_assigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFD600"
            android:fontFamily="@font/gilroy_extra_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="Total Assigned"
            android:textColor="#2B2B2B"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/unselected_card"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttl_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Target"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_achieved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Achieved"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/unselected_card"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttl_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Calls:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Answered"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/unselected_card"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttl_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="IN:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_ni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="NI:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_nr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="NR:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_np"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="NP:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Off:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="CB:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="50dp" />

        <TextView
            android:id="@+id/no_chart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/ic_baseline_report_problem_24"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="No chart data available"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="#2962FF"
        android:visibility="gone"
        app:indicatorName="BallPulseIndicator" />

    <LinearLayout
        android:id="@+id/source_report_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/unselected_card"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttl_ongoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="On Going:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="WON:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Loss:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="None:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/unselected_card"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttl_lpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Login Process:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Meeting Done:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Site Visit Done:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/unselected_card"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttl_meeting_shed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Meeting Scheduled:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ttl_sv_sched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="Site Visit Scheduled:"
                android:textColor="#2B2B2B"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>